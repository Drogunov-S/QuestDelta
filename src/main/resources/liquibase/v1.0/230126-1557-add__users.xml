<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="230126-1557" author="sergey">
        <createTable schemaName="quest" tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_author_id" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(45)"/>
            <column name="password" type="VARCHAR(45)"/>
            <column name="role" type="enum('GUEST', 'USER', 'REDACTOR', 'ADMIN')"/>
            <column name="update_date" type="TIMESTAMP"/>
            <column name="create_date" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
