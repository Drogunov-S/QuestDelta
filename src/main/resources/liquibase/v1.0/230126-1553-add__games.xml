<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="230126-1553" author="sergey">
        <createTable schemaName="quest" tableName="games">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_games"/>
            </column>
            <column name="create_date" type="DATETIME"/>
            <column name="update_date" type="DATETIME"/>
            <column name="user_id" type="BIGINT"/>
            <column name="quest_id" type="BIGINT"/>
            <column name="last_question_id" type="BIGINT"/>
            <column name="game_state" type="enum('START', 'PLAY', 'END')"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
